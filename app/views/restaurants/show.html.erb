<p style="color: green"><%= notice %></p>

<%= render @restaurant %>
<div>
  <%= link_to "Edit this restaurant", edit_restaurant_path(@restaurant) %> |
  <%= link_to "Back to restaurants", restaurants_path %>

  <%= button_to "Destroy this restaurant", @restaurant, method: :delete %>
</div>

<h2>Reviews</h2>
  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">
      <%= review.content %>
      <%= link_to "Deletar",
        review_path(review),
        data: {turbo_method: :delete, turbo_confirm: "Tem certeza?"}
      %>
    </li>
  </ul>
  <% end %>
  <%= link_to 'Adicionar uma nova review', new_restaurant_review_path(@restaurant) %>
</div>
